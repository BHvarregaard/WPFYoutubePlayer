<Window x:Class="YoutubeWPFPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeWPFPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="688.698">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="idtextBox" Grid.Row="0" HorizontalAlignment="Left" Height="30"  VerticalAlignment="Center" Margin="10,0,0,0" Width="420"/>
        <Button Grid.Row="0" Content="Load and Play" HorizontalAlignment="Left" VerticalAlignment="center" Margin="450,0,0,0" Height="30" Width="100" Click="Button_Click"/>
        <WebBrowser x:Name="browser" Grid.Row="1" />

    </Grid>
</Window>
